{
  "name": "arnarflow",
  "version": "5.4.2",
  "description": "Personal project management for Arnar",
  "main": "electron.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "electron:publish": "vite build && electron-builder --publish always",
    "electron:publish:fast": "vite build && electron-builder --publish always --config.compression=store",
    "electron:publish:skip-build": "electron-builder --publish always",
    "electron:preview": "electron ."
  },
  "dependencies": {
    "date-fns": "^3.6.0",
    "electron-log": "^5.0.0",
    "electron-updater": "^6.1.7",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "electron": "^40.1.0",
    "electron-builder": "^26.4.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "vite": "^5.0.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.arnar.arnarflow",
    "productName": "ArnarFlow",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron.js",
      "preload.js",
      "package.json"
    ],
    "extraMetadata": {
      "main": "electron.js"
    },
    "nodeGypRebuild": false,
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "compression": "normal",
    "electronDownload": {
      "cache": "./electron-cache"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon.ico"
    },
    "asar": true,
    "asarUnpack": [],
    "nsis": {
      "oneClick": true,
      "perMachine": false
    },
    "publish": {
      "provider": "github",
      "owner": "arnar111",
      "repo": "arnarflow",
      "releaseType": "release"
    }
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.57.1"
  }
}
